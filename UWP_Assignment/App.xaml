            <SolidColorBrush x:Key="CalendarDatePickerForeground">white</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonForegroundPointerOver">#498C47</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonForegroundPressed">#498C47</SolidColorBrush>

            <SolidColorBrush x:Key="RadioButtonOuterEllipseStroke">white</SolidColorBrush>
            <SolidColorBrush x:Key="RadioButtonOuterEllipseCheckedFill">white</SolidColorBrush>
            <SolidColorBrush x:Key="RadioButtonOuterEllipseCheckedFillPointerOver">white</SolidColorBrush>
            <SolidColorBrush x:Key="RadioButtonOuterEllipseCheckedFillPressed">white</SolidColorBrush>
            <SolidColorBrush x:Key="RadioButtonOuterEllipseCheckedStroke">#498C47</SolidColorBrush>
            <SolidColorBrush x:Key="RadioButtonCheckGlyphFill">#498C47</SolidColorBrush>
            <SolidColorBrush x:Key="RadioButtonCheckGlyphFillPointerOver">#498C47</SolidColorBrush>
            <SolidColorBrush x:Key="RadioButtonCheckGlyphFillPressed">#498C47</SolidColorBrush>
            <SolidColorBrush x:Key="RadioButtonForegroundPointerOver">#498C47</SolidColorBrush>

            <SolidColorBrush x:Key="NavigationViewSelectionIndicatorForeground" Color="#498C47"/>

            <!--<SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="Black"/>
            <SolidColorBrush x:Key="NavigationViewItemForegroundPointerOver" Color="White"/>
            <SolidColorBrush x:Key="NavigationViewItemForegroundSelected" Color="White"/>
